include /core/mixins/checkbox
include /core/mixins/textbox
include /core/mixins/combo
include /core/mixins/card
div(fg-panel='sport')
    .container
        .row: .col-12: +live-card('showTimer')
            .card-header
                h4.card-title Timer
                p.card-text
                | The timer appears in the top right hand corner of the screen.
                | Press 'Reset' to initialise the timer before you show it for the first time, or if it shows --:-- on screen.
            ul.list-group.list-group-flush
                li.list-group-item: +checkbox('Show timer', 'showTimer')
                li.list-group-item.py-1
                    .input-group
                        .input-group-prepend: span.input-group-text Reset
                        +textbox('Limiter (seconds)', 'timer1_limiter')
                        .input-group-append: .btn-group
                            button.btn.btn-warning.mdi.mdi-timer(fg-timer-id='timer1' fg-timer-op='set' fg-timer-lmode='soft' rv-fg-timer-limiter='timer1_limiter') Soft limit
                            button.btn.btn-danger.mdi.mdi-timer(fg-timer-id='timer1' fg-timer-op='set' fg-timer-lmode='hard' rv-fg-timer-limiter='timer1_limiter') Hard limit
                            button.btn.btn-success.mdi.mdi-timer(fg-timer-id='timer1' fg-timer-op='set') No limit
                li.list-group-item.py-1
                    .btn-group.float-right
                        button.btn.btn-success.mdi.mdi-step-backward(fg-timer-id='timer1' fg-timer-op='down')
                        button.btn.btn-danger.mdi.mdi-pause(fg-timer-id='timer1' fg-timer-op='stop')
                        button.btn.btn-success.mdi.mdi-step-forward(fg-timer-id='timer1' fg-timer-op='start')
                li.list-group-item.list-group-item-info.py-1
                    .btn-group.btn-group-sm
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-60') -1m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-30') -30s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-10') -10s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-5') -5s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-1') -1s
                    .btn-group.btn-group-sm.float-right
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='1') +1s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='5') +5s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='10') +10s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='30') +30s
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='60') +1m
                li.list-group-item.list-group-item-info.py-1
                    .btn-group.btn-group-sm
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-3600') -60m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-1800') -30m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-600') -10m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='-300') -5m
                    .btn-group.btn-group-sm.float-right
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='300') +5m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='600') +10m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='1800') +30m
                        button.btn.btn-info(fg-timer-id='timer1' fg-timer-op='add' fg-timer-counter='3600') +60m

        .row.my-3: .col-12: .card
            .card-body.py-2
                .btn-group
                    button.btn.btn-success.mdi.mdi-step-backward(rv-on-click='methods.timerOpBoth' fg-timer-op='down')
                    button.btn.btn-danger.mdi.mdi-pause(rv-on-click='methods.timerOpBoth' fg-timer-op='stop')
                    button.btn.btn-success.mdi.mdi-step-forward(rv-on-click='methods.timerOpBoth' fg-timer-op='start')

