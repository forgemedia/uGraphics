{
    "locals": {
        "product": "Forge Graphics Thing",
        "project": "Gen3",
        "copyright": "Forge Media"
    },
    "defaults": {
        "port": 3000
    },
    "viewDirectories": [ "varsity18/views", "global/views" ],
    "publicDirs": {
        "js": [ "global/js" ],
        "js/local": [ "varsity18/js" ],
        "jspm_packages": [ "jspm_packages" ],
        "output": [ "output" ],
        "assets": [ "varsity18/assets", "global/assets" ],
        "node_modules": [ "node_modules" ]
    },
    "log": {
        "file": false,
        "path": "fg.log"
    },
    "frontend": {
        "browserSupport": [
            "Chrome > 40"
        ],
        "sassIncludePaths": [
            "node_modules/bootstrap/scss"
        ],
        "stylIncludePaths": [
            "node_modules/"
        ]
    },
    "sockets": [
        "bug",
        "lowerThirds",
        "maintenance",
        "sport"
    ],
    "initDataStore": {
        "bug": {
            "bugLogo": "/assets/img/bug/forge.svg",
            "showClock": true
        },
        "lowerThirds": {
            "queue_lt1": [ { "lt1_text1": "Example lower third" } ],
            "currentQueueInput": { "lt1": { "lt1_text1": "" } }
        },
        "sport": {}
    }
}
