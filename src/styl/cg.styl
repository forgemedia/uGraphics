@require 'fonts/_acumin'

@require 'cg/_variables'
@require 'cg/_bug'
@require 'cg/_lowerThirds'

*
    box-sizing border-box
    backface-visibility hidden
    background-clip border-box

body
    display none
    margin 0
    background transparent
    overflow hidden
    -webkit-font-smoothing antialiased !important
    font-family 'Acumin Pro'

    &.debug
        background #ababab

#character-generator
    position absolute
    height 100vh
    width $width-x
    margin-left $margin-x

.fg-hide
    opacity 0
