@require '_variables';

$bug-logo-width = 8vw
$bug-logo-padding-right = 1vw
$bug-logo-total-width = $margin-x + $bug-logo-width + $bug-logo-padding-right

[fg-component=bug]
    #bug
        background $grey1
        position absolute
        top $margin-y
        padding 0 0 0 $margin-x
        height 6vh

    #logo
        height 100%
        position relative
        width $bug-logo-width
        img
            margin auto
            padding-right $bug-logo-padding-right
            position absolute
            top 0
            bottom 0
            width 100%

    #hashtag, #arbitrary
        color #ffffff
        position absolute
        font-size 2vw
        bottom $margin-y

    #arbitrary
        right 0
