@require '_variables';

$bug-logo-width = 8vw
$bug-logo-padding-right = 1vw
$bug-total-width = $margin-x + $bug-logo-width

$bugsegment-height = 6vh

[fg-component=bug]
    .bugsegment
        position absolute
        top $margin-y
        height $bugsegment-height
        box-shadow $shadow_standard

        // &:after
        //     position absolute
        //     z-index -1
        //     width 120%
        //     height 100%
        //     transform skewX(-22deg) translateX(-10%)

    #bug
        background $grey1-gradient-tb
        padding-left $margin-x
        z-index 1
        border-top 1px solid $grey3

        #logo
            height 100%
            position relative
            width $bug-logo-width
            img
                opacity 0.75
                margin auto
                padding-right $bug-logo-padding-right
                position absolute
                top 0
                bottom 0
                width 100%

    #clock
        margin-left $bug-total-width
        width 10vw
        z-index 0
        text-align center
        background $grey9-gradient-tb
        border-radius 0 0.5vw 0.5vw 0
        border-top 1px solid white
        border-bottom 1px solid $grey5
        
        span
            position relative
            margin 0 auto
            color $grey1
            font-size: 4.5vh
            line-height $bugsegment-height 
            font-weight bold


    #hashtag, #arbitrary
        color #ffffff
        position absolute
        font-size 2vw
        bottom $margin-y

    #arbitrary
        right 0
