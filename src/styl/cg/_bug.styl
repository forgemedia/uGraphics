@require '_variables';

$bug-logo-width = 8vw
$bug-logo-padding-right = 1vw
$bug-total-width = $margin-x + $bug-logo-width

$bugsegment-height = 6vh

[fg-component=bug]
    .bugsegment
        position absolute
        top $margin-y
        height $bugsegment-height

    #bug
        @extend $grey1-texture-style
        padding-left $margin-x
        z-index 1

        #logo
            height 100%
            position relative
            width $bug-logo-width
            img
                opacity 0.75
                margin auto
                padding-right $bug-logo-padding-right
                position absolute
                top 0
                bottom 0
                width 100%

    .roundright
        border-radius 0 0.5vw 0.5vw 0

    #clock
        @extend $grey9-texture-style
        margin-left $bug-total-width
        width 10vw
        z-index 0
        text-align center
        border-radius 0 0.5vw 0.5vw 0
        
        span
            position relative
            margin 0 auto
            color $grey1
            font-size: 4.5vh
            line-height $bugsegment-height 
            font-weight bold


    #hashtag, #arbitrary
        color #ffffff
        position absolute
        font-size 2vw
        bottom $margin-y

    #arbitrary
        right 0
