@require '_variables';

$bug-logo-width = 8vw
$bug-logo-padding-right = 1vw
$bug-total-width = $margin-x + $bug-logo-width + $bug-logo-padding-right

$bugsegment-height = 6vh

[fg-component=bug]
    .bugsegment
        background $grey1
        position absolute
        top $margin-y
        height $bugsegment-height

    #bug
        padding-left $margin-x
        z-index 1

    #clock
        padding-left $bug-total-width
        padding-right $bug-logo-padding-right
        z-index 0

        span
            color #ffffff
            font-size: 4.5vh
            line-height $bugsegment-height 
            font-weight bold

    #logo
        height 100%
        position relative
        width $bug-logo-width
        img
            opacity 0.75
            margin auto
            padding-right $bug-logo-padding-right
            position absolute
            top 0
            bottom 0
            width 100%

    #hashtag, #arbitrary
        color #ffffff
        position absolute
        font-size 2vw
        bottom $margin-y

    #arbitrary
        right 0
